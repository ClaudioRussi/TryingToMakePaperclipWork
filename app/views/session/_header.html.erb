<div style="background-color:#DC5D38; top:0px;position:fixed; width:100%;" >
<%=form_tag action:'login', controller: 'session' do %>
<ul style='display: inline; list-style-type:none; vertical-align:middle;'>
  <li class='header_item'>
    <%= link_to 'PetProject', root_path, class:'logo'%>
  </li>
  <li class='header_item'>
    Pets for adoption
  </li>
  <li class='header_item'>
    Missing pets
  </li>
  <li class='header_item'>
    Found pets
  </li>
  <li class='header_item'>
    Memes
  </li>
  <% if loged? %>
    <li class='header_item'>
      <%= link_to (image_tag current_user.avatar.url(:thumb)), user_edit_path, class:'nav-link',style:'float: right' %>
    </li>
  
    <li class='header_item'>
      <%= link_to 'Logout', logout_path, class:'nav-link',style:'float: right;'%>
    </li>
    
  <% else %>
    <li class='header_item'>
    <%= link_to 'Sign up', new_user_path, class:'nav-link' %>
    </li>
    <li class='header_item'>
      Email: <%= email_field_tag :email, '' ,class: "form_field" %>
    </li>
    
    <li class='header_item'>
      Password: <%= password_field_tag :password, '' ,class: "form_field"  %>
    </li>
    
    <li class='header_item'>
      <%=submit_tag :Login, class: "form_button"  %>
    </li>
    <% end %>

</ul>
<% end %>
</div>